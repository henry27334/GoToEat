<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5C9D8"
    android:orientation="vertical"
    tools:context=".FragmentModel.memberFragmentModel">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:layout_below = "@+id/tbMember"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMShop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@tools:sample/avatars"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="277dp">

            <TableRow
                android:id="@+id/trAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="140px">

                <TextView
                    android:id="@+id/tvTagAccount"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|left"
                    android:text=" 使用者名稱"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|right" />

            </TableRow>

            <TableRow
                android:id="@+id/trName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D5C9D8"
                android:minHeight="140px">

                <TextView
                    android:id="@+id/tvTagName"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|left"
                    android:text=" 名稱"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|right" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/rightarrow_thin" />

            </TableRow>

            <TableRow
                android:id="@+id/trPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="140px">

                <TextView
                    android:id="@+id/tvTagPhone"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|left"
                    android:text=" 手機"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|right" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/rightarrow_thin" />

            </TableRow>

            <TableRow
                android:id="@+id/trAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="140px">

                <TextView
                    android:id="@+id/tvTagAddress"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|left"
                    android:text=" 地址"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|right" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/rightarrow_thin" />
            </TableRow>

            <TableRow
                android:id="@+id/trEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="140px">

                <TextView
                    android:id="@+id/tvTagEmail"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|left"
                    android:text=" Email"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical|right" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="20dp"
                    android:layout_height="55dp"
                    android:src="@drawable/rightarrow_thin" />
            </TableRow>

        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btnUpdatePW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密碼"
            android:textSize="25dp" />

    </LinearLayout>

</RelativeLayout>